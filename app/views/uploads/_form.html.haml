= form_for(@upload, html: { multipart: true }) do |f|
  - if @upload.errors.any?
    #error_explanation
      %h2
        = pluralize(@upload.errors.count, "error")
        prohibited this upload from being saved:
      %ul
        - @upload.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = f.label :uploaded_file, t('.upload_new_file')
    = f.file_field :uploaded_file, multiple: true, name: 'upload[uploaded_file]'
    = f.submit
- # jquery upload template #
  %script#template-upload{:type => "text/x-tmpl"} <div class="upload">{%=o.name%}<div class="progress"><div class="bar" style="width: 0%"></div></div></div>
